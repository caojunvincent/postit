<p class="pull-right">
  [<%= link_to 'edit this post', edit_post_path(@post) %>]
</p>

<p>
<%= render @post.categories %>
</p>

<% header = link_to('All Posts', posts_path) + " &raquo; #{@post.title}".html_safe %>
<%= render 'shared/content_title', title: header %>

<p>
<%= @post.description %>
</p>
<hr />

<h4>Leave a comment?</h4>
<%= form_for [@post, @comment] do |f| %>
<%= render 'shared/errors', obj: @comment %>
  <div class='control-group'>
    <%= f.text_area :body, rows: 5 %>
  </div>
  <%= f.submit "Create a comment", class: "btn btn-primary" %>
<% end %>

<h5>Comments:</h5>
<% @comments.each do |comment| %>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <br />
    <span class="quiet">by</span> <%= comment.creator.username if comment.creator.present? %>
  <small>at <%= display_datetime comment.created_at %></small>
</div>
<% end %>
